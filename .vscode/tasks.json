{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Release",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "Site.csproj",
                "/p:Configuration=Release",
                "/p:Platform=\"Any CPU\"",
                "/verbosity:minimal"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "Site.csproj",
                "/p:Configuration=Debug",
                "/p:Platform=\"Any CPU\""
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "Site.csproj",
                "/t:Clean;Rebuild",
                "/p:Configuration=Release"
            ],
            "group": "build"
        },
        {
            "label": "Restore NuGet Packages",
            "type": "shell",
            "command": "nuget",
            "args": [
                "restore",
                "Site.csproj"
            ],
            "group": "build"
        },
        {
            "label": "Publish Website",
            "type": "shell",
            "command": "${workspaceFolder}/publish.ps1",
            "group": "build"
        }
    ]
}